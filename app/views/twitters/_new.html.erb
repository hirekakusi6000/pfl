 <!-- ポップアップ Twitter追加-->
  <%= form_with(model: @twitter, local: true) do |form| %>

  <div class="popup_wrap">
    <input id="trigger_twitter" type="checkbox">
    <div class="popup_overlay">
      <label for="trigger_twitter" class="popup_trigger"></label>
      <div class="popup_content_p">
      <div class="popup_content">
        <p class="popup_title">Twitterリンク追加</p>
        <div class="twitter_form_pp">
          <div class="twitter_form_p">

            <label class="form_title">アカウントID&emsp;&emsp;</label>
            <%= form.text_field :account,class:"link_form",maxlength: "1000",required: true %>
          <div class="twitter_coment_form_p">
            <label class="coment_form_title">コメント&emsp;</label>
            <%= form.text_area :comment,class:"link_coment_form",maxlength: "1000"%>

          </div>
        </div>
      </div>
      <p><label class="edit_close_btn"  for="trigger_twitter"><i class="fas fa-times-circle edit_close_btn"></i></label></p>
      <input class="OK" type="submit" value="保存" name="add_twitter">
     </div>
    </div>
   </div>
  </div>

 <% end %>