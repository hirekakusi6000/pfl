<!-- Twitter一覧編集 仮表示-->

<% if @twitters.present? %>
  <div class="twitter_edit_click">
   <p>↓クリックで編集できます</p>
  </div>
<%end%>

<% @twitters.each do |twitter| %>  
  <%= form_with(model: twitter, local: true, multipart: true) do |form| %>

<!-- ポップアップ twitter-->
  <div class="popup_wrap">
    <input id="trigger_twitter_edit" type="checkbox">
    <div class="popup_overlay">
      <label for="trigger_twitter_edit" class="popup_trigger"></label>
      <div class="popup_content_p">
      <!-- アカウント情報-->
      <div class="popup_wrap">
        <input id="trigger_acount" type="checkbox">
          <div class="popup_content_acount">
            <div class="sns_acount_popup_title">
             <p class="popup_title">Twitterリンク設定</p>
            </div>
          <div class="sns_acount_form_pp">
            <div class="sns_acount_form_p">
              <label  class="form_title">アカウントのID&emsp;</label>
               <%= form.text_field :account,class:"sns_edit_form",maxlength: "100"%>
              <label class="form_title">コメントを追加&emsp;</label>
               <%= form.text_field :comment,class:"sns_edit_form",maxlength: "100"%>
            </div>
           </div>
          <p><label class="edit_close_btn"  for="trigger_acount"><i class="fas fa-times-circle edit_close_btn"></i></label></p>
          <input class="OK" type="submit" value="保存" name="account">
        </div>
      </div>
 <!-- 外側色-->
  <div class="popup_wrap">
    <input id="trigger_outsidecolor" type="checkbox">
    <div class="popup_content_c">
      <p class="popup_title">Twitterの外側色</p>
      <p><label class="edit_close_btn"  for="trigger_outsidecolor"><i class="fas fa-times-circle edit_close_btn"></i></label></p>
        <% @color_index.each do |color| %>
         <%= form.radio_button :outsidecolor, color,id:"C#{color}"%>
         <label for="C<%= color%>" class="color_index_p">
            <span class="color_index C<%= color%>"></span>
          </label>
        <%end%>
      <input class="OK" type="submit" value="保存" name="outsidecolor">
    </div>
  </div>

 <!-- 内側色-->
  <div class="popup_wrap">
    <input id="trigger_insidecolor" type="checkbox">
    <div class="popup_content_c">
      <p class="popup_title">Twitterの内側色</p>
      <p><label class="edit_close_btn"  for="trigger_insidecolor"><i class="fas fa-times-circle edit_close_btn"></i></label></p>
        <% @color_index.each do |color| %>
          <%= form.radio_button :insidecolor, color,id:"B#{color}"%>
          <label for="B<%= color%>" class="color_index_p">
            <span class="color_index B<%= color%>"></span>
          </label>
        <%end%>
      <input class="OK" type="submit" value="保存" name="insidecolor">
    </div>
  </div>
    <!-- twitterポップアップ選択画面 -->
      <div class="popup_content_select">
        <p class="popup_title">Twitter設定</p>
        <p><label class="edit_close_btn"  for="trigger_twitter_edit"><i class="fas fa-times-circle edit_close_btn"></i></label></p>
        <p><label for="trigger_acount" class="open_btn_s">Twitterのリンクを設定する</label></p>
        <p><label for="trigger_outsidecolor" class="open_btn_s">Twitterアイコンの色を設定(外側)</label></p>
        <p><label for="trigger_insidecolor" class="open_btn_s">Twitterアイコンの色を設定(内側)</label></p>
      </div>
    </div>
   </div>
  </div>

  <% if @twitter.account!="" %>
    <label for="trigger_twitter_edit">
    <div class="sns_p">
      <p class="sns_text"><%= @twitter.comment %></p>
      <div class="sns_outside twitter_outsidecolor">
        <span class="fab fa-twitter sns_inside twitter_insidecolor"></span>
      </div>
    </div>
    </label>
  <%end%>

  <% end %>
 <% end %>