<% @facebooks.each do |facebook| %>  
  <%= form_with(model: facebook, local: true, multipart: true,class:"foo") do |form| %>
  <%hex = SecureRandom.hex(10)%>
<!-- ポップアップ facebook-->
  <div class="popup_wrap">
    <input id="trigger_<%= facebook%>" type="checkbox">
    <div class="popup_overlay">
      <label for="trigger_<%= facebook%>" class="popup_trigger"></label>
      <div class="popup_content_p">
      <!-- アカウント情報-->
      <div class="popup_wrap">
        <input id="trigger_acount<%= facebook%>" type="checkbox">
          <div class="popup_content_acount edit_sns_popup">
            <div class="sns_acount_popup_title">
             <p class="popup_title" style="margin-bottom:27px;">facebookリンク設定</p>
            </div>
          <div class="sns_acount_form_pp" style="height:80px;">
            <div class="sns_acount_form_p">
              <label  class="form_title">アカウントのURL&nbsp;</label>
               <%= form.text_field :account,class:"sns_edit_form",maxlength: "100",required: true%>
              <label class="form_title">コメントを追加&emsp;</label>
               <%= form.text_field :comment,class:"sns_edit_form",maxlength: "100"%>
            </div>
           </div>
          <p><label class="edit_close_btn"  for="trigger_acount<%= facebook%>"><i class="fas fa-times-circle edit_close_btn"></i></label></p>
          <input class="OK" type="submit" value="保存" name="account">
        </div>
      </div>
 <!-- 外側色-->
  <div class="popup_wrap">
    <input id="trigger_outsidecolor<%= facebook%>" type="checkbox">
    <div class="popup_content_c">
      <p class="popup_title">facebookの外側色</p>
      <p><label class="edit_close_btn"  for="trigger_outsidecolor<%= facebook%>"><i class="fas fa-times-circle edit_close_btn"></i></label></p>
        <% @color_index.each do |color| %>
         <%= form.radio_button :outsidecolor, color,id:"C#{hex}#{color}"%>
         <label for="C<%= hex%><%= color%>" class="color_index_p">
            <span class="color_index C<%= hex%><%= color%>"></span>
          </label>
        <%end%>
      <input class="OK" type="submit" value="保存" name="outsidecolor">
    </div>
  </div>

 <!-- 内側色-->
  <div class="popup_wrap">
    <input id="trigger_insidecolor<%= facebook%>" type="checkbox">
    <div class="popup_content_c">
      <p class="popup_title">facebookの内側色</p>
      <p><label class="edit_close_btn"  for="trigger_insidecolor<%= facebook%>"><i class="fas fa-times-circle edit_close_btn"></i></label></p>
        <% @color_index.each do |color| %>
          <%= form.radio_button :insidecolor, color,id:"B#{hex}#{color}"%>
          <label for="B<%= hex%><%= color%>" class="color_index_p">
            <span class="color_index B<%= hex%><%= color%>"></span>
          </label>
        <%end%>
      <input class="OK" type="submit" value="保存" name="insidecolor">
    </div>
  </div>
    <!-- facebookポップアップ選択画面 -->
      <div class="popup_content_select">
        <p class="popup_title">facebook設定</p>
        <%= link_to '削除', "/facebooks/#{facebook.id}",class:"link_destroy",method: :delete, data: {confirm: "削除しますか?"}  %>
        <p><label class="edit_close_btn"  for="trigger_<%= facebook%>"><i class="fas fa-times-circle edit_close_btn"></i></label></p>
        <p><label for="trigger_acount<%= facebook%>" class="open_btn_s">facebookのリンク・コメントを編集</label></p>
        <p><label for="trigger_outsidecolor<%= facebook%>" class="open_btn_s">facebookアイコンの色を設定(外側)</label></p>
        <p><label for="trigger_insidecolor<%= facebook%>" class="open_btn_s">facebookアイコンの色を設定(内側)</label></p>
      </div>
    </div>
   </div>
  </div>

  <% if @facebook.account!="" %>
    <label for="trigger_<%= facebook%>">
    <div class="sns_p">
      <p class="sns_text"><%= facebook.comment %></p>
      <div class="sns_outside facebook_outsidecolor<%= facebook.outsidecolor%>">
        <span class="fab fa-facebook sns_inside facebook_insidecolor<%= facebook.insidecolor%>"></span>
      </div>
    </div>
    </label>
  <%end%>

<style>

    /*facebookアイコン 外側色*/
  .facebook_outsidecolor<%= facebook.outsidecolor%>{
  background-color: #<%= facebook.outsidecolor%>;
  }

  /*facebookアイコン 内側色*/
  .facebook_insidecolor<%= facebook.insidecolor%>{
  color: #<%= facebook.insidecolor%>;
  }

  <% @color_index.each do |color| %>
    .C<%= hex%><%= color%>{
    background-color: #<%= color%>;
    }
  <%end%>

  <% @color_index.each do |color| %>
    .B<%= hex%><%= color%>{
    background-color: #<%= color%>;
    }
  <%end%>

</style>

  <% end %>
 <% end %>