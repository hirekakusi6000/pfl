<div class="introduce">

  <% if current_user%>
    <% if current_user.id == @subprofile.user_id%>
      <a href="/subprofiles/<%= @subprofile.id %>/edit">
        <div class="pen_p">
          <i class="fa fa-edit pen"></i>
        </div>
      </a>
      <a href="/subprofiles">
        <div class="pen_p back_index">
          <i class="fas fa-copy"></i>
        </div>
      </a>
    <%else%>
      <%= link_to :back do %>
        <div class="pen_p back_index">
          <i class="fas fa-chevron-left"></i>
        </div>
      <% end %>
    <%end%>
   <%else%>
    <%= link_to :back do %>
      <div class="pen_p back_index">
        <i class="fas fa-chevron-left"></i>
      </div>
    <% end %>
  <%end%>

  <div class="show_subprofile_pp">
    <p class="show_subprofile_title"><%=@subprofile.title%></p>
    <p class="show_subprofile_pfl_text" style="font-size:16px;"><%= @subprofile.pfl_text %></p>
  </div>
</div>

<style>
 body{
     background-color: #<%=@subprofile.background_color%>;
  }

     .introduce {
    height: auto;
    padding-bottom:100px;
    font-family: <%= @subprofile.font_family%>;
    color: #<%= @subprofile.font_color%>;
  }
</style>