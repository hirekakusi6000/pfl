<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
<!-- ヘッダー画像-->
 <img  class="header_image" src="<%= "/user_images/#{@user.header_image}" %>">

<!-- アイコン拡大-->
<div class="popup_wrap">
  <input id="trigger" type="checkbox">
    <div class="popup_overlay">
      <label for="trigger" class="close_btn">×</label>
        <%= form_tag("/users/update", {multipart: true}) do %>
          <% if session[:user_id]%>
            <% if @current_user.id==@user.id%>
              <a href="/users/pfl_edit" class="image_edit">変更</a>
            <%end%>
          <%end%>
        <%end%>
      <label for="trigger" class="popup_trigger"></label>

   <div class="popup_content">
    <img  class="icon_image_enlarge" style=border: 10px solid red;  src="<%= "/user_images/#{@user.icon_image}" %>">
   </div>
   
  </div>
</div>

<label for="trigger" class="open_btn">
  <div class="icon_image_p">
    <img  class="icon_image" src="<%= "/user_images/#{@user.icon_image}" %>">
  </div>
</label>

<!-- 名前-->
<p class="pfl_user_name"><%=@user.name%></p>

<!-- 編集へのリンク-->
<% if current_user%>
  <% if @current_user.id == @user.id%>
   <a href="/users/<%= @current_user.id %>/edit">
    <div class="pen_p">
      <i class="fa fa-edit pen"></i>
    </div>
   </a>
  <%end%>
<%end%>

<style>
  body {
    background-color: #<%=@user.background_color%>;
    padding-bottom: 150px;
  }

  @media screen and (max-width: 375px) {
  body {
    margin-top:15px;
  }
  }

  /*Twitterアイコン 外側色*/
  .twitter_uti{
  background-color: #<%= @user.twitter_outsidecolor%>;
  }
  /*Twitterアイコン 内側色*/
  .twitter_soto span{
  color: #<%= @user.twitter_insidecolor%>;
  }
  /*instagramアイコン 外側色*/
  .instagram_uti{
  background-color: #<%= @user.instagram_outsidecolor%>;
  }
  /*instagramアイコン 内側色*/
  .instagram_soto span{
  color: #<%= @user.instagram_insidecolor%>;
  }
  /*facebookアイコン 外側色*/
  .facebook_uti{
  background-color: #<%= @user.facebook_outsidecolor%>;
  }
  /*facebookアイコン 内側色*/
  .facebook_soto span{
  color: #<%= @user.facebook_insidecolor%>;
  }
  /*youtubeアイコン 外側色*/
  .youtube_uti{
  background-color: #<%= @user.youtube_outsidecolor%>;
  }
  /*youtubeアイコン 内側色*/
  .youtube_soto span{
  color: #<%= @user.youtube_insidecolor%>;
  }
  /*tiktokアイコン 外側色*/
  .tiktok_uti{
  background-color: #<%= @user.tiktok_outsidecolor%>;
  }
  /*tiktokアイコン 内側色*/
  .tiktok_soto span{
  color: #<%= @user.tiktok_insidecolor%>;
  }
</style>

